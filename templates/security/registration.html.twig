{% extends "base.html.twig" %}
{% block title %}Inscription{% endblock %}
{% block body %}
    <h1>Inscription sur le site</h1>

    {{form_start(form)}}
    {{form_row(form.firstname,{'label': 'Prénom', 'attr':{'placeholder':'votre prénom'}})}}
    {{form_row(form.username,{'label': 'Nom', 'attr' : {'placeholder': 'votre nom'}})}}
    {{form_row(form.email,{'label': 'Email', 'attr' : {'placeholder': 'votre email'}})}}
    {{form_row(form.avatar,{'label': 'Photo de profil', 'attr' : {'placeholder': 'votre photo de profil'}})}}
    {{form_row(form.password,{'label': 'Mot de passe', 'attr' : {'placeholder': 'votre mot de passe'}})}}
    {{form_row(form.confirm_password,{'label': 'Confirmer le mot de passe', 'attr' : {'placeholder': 'taper de nouveau votre mot de passe'}})}}
    <button type="submit">Inscription</button>
    {{form_end(form)}}
{% endblock %}